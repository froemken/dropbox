{
  "name": "sfroemken/fal_dropbox",
  "type": "typo3-cms-extension",
  "description": "Add a FAL driver for Dropbox to TYPO3",
  "license": "GPL-2.0-or-later",
  "keywords": ["typo3", "TYPO3 CMS", "dropbox", "fal", "fal_dropbox"],
  "homepage": "http://www.typo3lexikon.de",
  "authors": [
    {
      "name": "Stefan Froemken",
      "email": "froemken@gmail.com",
      "role": "Lead Developer"
    }
  ],
  "support": {
    "email": "froemken@gmail.com",
    "issues": "https://github.com/froemken/fal_dropbox/issues",
    "source": "https://github.com/froemken/fal_dropbox"
  },
  "require": {
    "typo3/cms-core": "^10.4",
    "kunalvarma05/dropbox-php-sdk": "^0.2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "friendsofphp/php-cs-fixer": "^3.6"
  },
  "autoload": {
    "psr-4": {
      "SFroemken\\FalDropbox\\": "Classes",
      "Kunnu\\Dropbox\\": "vendor/kunalvarma05/dropbox-php-sdk/src/Dropbox",
      "Tightenco\\Collect\\": "vendor/tightenco/collect/src/Collect"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SFroemken\\FalDropbox\\Tests\\": "Tests"
    }
  },
  "config": {
    "vendor-dir": ".build/vendor"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "fal_dropbox",
      "app-dir": ".build",
      "web-dir": ".build/public"
    }
  },
  "scripts": {
    "php:fix": ".build/vendor/bin/php-cs-fixer --config=Build/.php_cs.php fix Classes",
    "ci:php:lint": "find *.php Classes Configuration Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
    "ci:php:fixer": ".build/vendor/bin/php-cs-fixer --config=Build/.php_cs.php fix --dry-run -v --show-progress=dots --diff-format=udiff Classes",
    "link-extension": [
      "@php -r 'is_dir($extFolder=__DIR__.\"/.build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
      "@php -r 'file_exists($extFolder=__DIR__.\"/.build/public/typo3conf/ext/fal_dropbox\") || symlink(__DIR__,$extFolder);'"
    ],
    "post-autoload-dump": [
      "@link-extension"
    ]
  }
}
